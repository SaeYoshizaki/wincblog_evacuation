---
import Layout from "../layouts/Layout.astro";
import { createClient } from 'microcms-js-sdk';

// Define the microCMS client
const client = createClient({
  serviceDomain: import.meta.env.MICROCMS_SERVICE_DOMAIN,
  apiKey: import.meta.env.MICROCMS_API_KEY,
});

type Category = {
  id: number;
  name: string;
  slug: string;
  description: string;
};

type Post = {
  id: number;
  title: {
    rendered: string;
  };
  date: string;
  featured_media: number;
  content: {
    rendered: string;
  };
};

export async function getStaticPaths() {
  const res = await fetch('https://public-api.wordpress.com/wp/v2/sites/wincblogs.wordpress.com/categories');
  const categories: Category[] = await res.json();

  return categories.map(category => ({
    params: { category: category.slug },
  }));
}

export async function getStaticProps({ params }) {
  const res = await fetch('https://public-api.wordpress.com/wp/v2/sites/wincblogs.wordpress.com/categories');
  const categories: Category[] = await res.json();

  const currentCategory = categories.find(cat => cat.slug === params.category);

  if (!currentCategory) {
    return { notFound: true };
  }

  const postsRes = await fetch(`https://public-api.wordpress.com/wp/v2/sites/wincblogs.wordpress.com/posts?categories=${currentCategory.id}`);
  const posts: Post[] = await postsRes.json();

  return {
    props: {
      currentCategory,
      posts,
    },
  };
}

// Data available from the `getStaticProps` function
const { currentCategory, posts } = Astro.props;

const postTitles = posts.map(post => post.title.rendered);
const postIds = posts.map(post => post.id);
const postDates = posts.map(post => post.date);

---
<Layout title="wincblog">
  <main>
    <p class="guide"><a href="/">home</a> > <a href="/blog">blog</a> > <a href={'/${currentCategory.slug}'}>{currentCategory.name}</a></p>
    
    <div class="eye-catch">
      <h1>{currentCategory.name}</h1>
      <div class="carousel">
        <figure>
          <img src="web/picture1.jpg" alt="">
          <img src="web/picture2.jpg" alt="">
          <img src="web/picture3.jpg" alt="">
          <img src="web/picture4.jpg" alt="">
          <img src="web/picture5.jpg" alt="">
        </figure>
      </div>
    </div>

    <div class="New_articles">
      {postTitles.length > 0 ? (
        <ul>
          {postTitles.map((postTitle, index) => {
            const year = postDates[index].substring(0, 4);
            const month = postDates[index].substring(5, 7);
            const date = postDates[index].substring(8, 10);
            const postId = postIds[index];
            const contentSnippet = posts[index].content.rendered.substring(0, 50); // Sample content

            return (
              <li key={postId}>
                <div class="blog">
                  <div class="picture">
                    <a href={`/posts/${postId}`}>
                      <img
                        src={`https://wincblogs.wordpress.com/wp-content/uploads/${year}/${month}/${postId}.jpg`}
                        alt={postTitle}
                        class="post-image"
                      />
                    </a>
                  </div>
                  <div class="article_sepalate_line"></div>
                  <div class="post">
                    <a href={`/posts/${postId}`} class="title">{postTitle}</a>
                    <p class="date">投稿日: {year}年{month}月{date}日</p>
                    <p class="explanation">{contentSnippet}...</p>
                    <div class="tsuzuki_botton">
                      <a href={`/posts/${postId}`} class="tsuzuki">続きを読む</a>
                    </div>
                  </div>
                </div>
              </li>
            );
          })}
        </ul>
      ) : (
        <p>投稿がありません</p>
      )}
    </div>
    <footer>
      <p>© 2024 Copyright: <span><a>コンピュータ研究会・WINC</a></span></p>
    </footer>
  </main>
</Layout>


